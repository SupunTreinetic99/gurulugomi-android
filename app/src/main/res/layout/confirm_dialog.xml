<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:fancy="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">


    <ImageView android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginBottom="10dp"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Are you Sure"
              android:textSize="20sp"
              android:textColor="@color/colorAuthor"
              android:id="@+id/dialog_title"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Instead delete review you can edit review "
              android:id="@+id/dialog_sub_title"
              android:layout_marginTop="5dp"
              android:layout_marginBottom="5dp"/>

    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:gravity="center_vertical">
        <mehdi.sakout.fancybuttons.FancyButton
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="5dp"
                fancy:fb_iconPosition="left"
                fancy:fb_text="@string/btn_cancel"
                fancy:fb_textColor="@color/colorPrimary"
                fancy:fb_defaultColor="@color/white"
                fancy:fb_radius="20dp"
                fancy:fb_borderWidth="1dp"
                fancy:fb_borderColor="@color/colorPrimary"
                fancy:fb_textFontRes="@font/product_sans_bold"
                android:id="@+id/btn_cancel"/>


        <mehdi.sakout.fancybuttons.FancyButton
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                fancy:fb_iconPosition="left"
                fancy:fb_text="@string/btn_accept"
                fancy:fb_textColor="@color/white"
                fancy:fb_defaultColor="@color/colorPrimary"
                fancy:fb_radius="20dp"
                fancy:fb_textFontRes="@font/product_sans_bold"
                android:id="@+id/btn_accept"/>


    </LinearLayout>


</LinearLayout>


