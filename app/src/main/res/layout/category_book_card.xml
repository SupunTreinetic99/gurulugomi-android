<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/id_book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@color/white"
        android:orientation="vertical">

    <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/book_image"
                android:layout_width="110dp"
                android:layout_height="165dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop" />

        <com.treinetic.whiteshark.customview.OfferView
                android:id="@+id/offerView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right">

        </com.treinetic.whiteshark.customview.OfferView>

        <LinearLayout
                android:id="@+id/gradientLayer"
                android:layout_width="110dp"
                android:layout_height="70dp"
                android:alpha="0.9"
                android:background="@drawable/book_gradient"
                android:orientation="vertical">

            <ImageView
                    android:id="@+id/menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="5dp"
                    android:background="?selectableItemBackground"
                    android:clickable="true"
                    android:src="@drawable/three_dots" />


        </LinearLayout>

        <ImageView
                android:id="@+id/downloadedIcon"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="6dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop" />

    </FrameLayout>


    <TextView
            android:id="@+id/cat_book_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingTop="2dp"
            android:textColor="@color/colorProfileList"
            android:textSize="12sp" />


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

        <LinearLayout
                android:id="@+id/labelBkg"
                android:layout_width="73dp"
                android:layout_height="20dp"
                android:gravity="center_vertical">

            <TextView
                    android:id="@+id/book_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:textColor="@color/colorPurchasedPrice"
                    android:textSize="11sp" />

        </LinearLayout>

        <TextView
                android:id="@+id/book_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:visibility="gone" />

    </LinearLayout>


</LinearLayout>


